<% include ../partials/header.ejs %>
    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= project.title %>
                    <small><%= project.sub_title %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
               <!-- <img class="img-responsive" src="/stylesheets/img/FINAL Layout.png" alt=""> -->
               <a class="fancybox" rel="group" href="<%= project.jumbo %>"><img class="img-responsive main-img" src="<%= project.jumbo %>" alt="" /></a>
               <% if (project.title === "Capstone") { %>
                    <h3>Research Video <small> Made with Adobe After Effects </small></h3>
                    <iframe _ngcontent-c5="" allowfullscreen="" frameborder="0" height="315" src="https://www.youtube.com/embed/QmlVGqqGc2w" width="100%"></iframe>
               <% } %>
            </div>

            <div class="col-md-4">
                <h3>Project Description</h3>
                <p><%= project.description %></p>
                <h3>Project Details</h3>
                <ul>
                    <% project.details.forEach(function(item){ %>
                        <li> <%= item %> </li>  
                    <%})%>
                </ul>
                <h3>Project Website</h3>
                <ul>
                    <a href="<%= project.website %>"><li>Link to Project Website</li></a>
                </ul>
            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header"></h3>
            </div>

            <% project.imgs.forEach(function(image){ %>
                <div class="col-sm-3 col-xs-6">
                    <a class="fancybox" rel="group" href="<%= image %>"><img class ="img-responsive img-extra" src="<%= image %>" alt="" /></a>
                </div>             
            <% }) %>
                
        </div>
        <!-- /.row -->
        
        <!-- MORE Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">More Projects</h3>
            </div>
            <% allProjects.forEach(function(moreProject){ %>
            <% if (moreProject.title != project.title) { %>
                <div class="col-sm-3 col-xs-6">
                    <a href="/projects/<%= moreProject.title %>">
                        <div class="imgBox">
                            <img class="img-responsive portfolio-item" src="<%= moreProject.thumbnail %>" alt="">
                            <div class="overlay">
                                <div class="content">
                                    <h3 class="text-center"><%=moreProject.title %></h3>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>             

            <% }) %>
        <hr>

<% include ../partials/footer.ejs %>
